{% for i in range(3) %}
---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: elasticsearch-pv-{{ i }}
spec:
  capacity:
    storage: 4Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: sdv-local-storage
  local:
    path: /mnt/data/es-{{ i }}
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: kubernetes.io/hostname
          operator: In
          values:
          - {{ k8s_node_name.stdout }}
{% endfor %}
